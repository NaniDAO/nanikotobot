#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules/telegraf/bin/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules/telegraf/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules/telegraf/bin/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules/telegraf/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/telegraf@4.6.0/node_modules:/Users/shiv/projects/nani/telegram-bot/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/telegraf" "$@"
else
  exec node  "$basedir/../../bin/telegraf" "$@"
fi
